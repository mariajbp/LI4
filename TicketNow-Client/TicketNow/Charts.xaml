<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:forms="clr-namespace:Microcharts.Forms;assembly=Microcharts.Forms"
             x:Class="TicketNow.Charts"
             BackgroundImage ="bg.png">

    <ScrollView>

        <StackLayout Orientation="Vertical">

    <StackLayout Orientation="Horizontal"  HorizontalOptions="Center">

        <Label Text="Begin:"
        Margin="0,30,-15,0"
               HeightRequest="44" WidthRequest="70" FontAttributes="Bold"
                TextColor="#FFFFFF"
                FontSize="Large"
        />


     <DatePicker x:Name="begin" BackgroundColor="Transparent"
            Margin="0,26"
            Format="dd, MMMM yyyy"
            MinimumDate="01/01/2020"
            MaximumDate="{x:Static sys:DateTime.Now}"
            Date="{Binding SelectedDate}"
       
           
           
                HeightRequest="44" WidthRequest="180" FontAttributes="Bold"
                TextColor="#FFFFFF"
                FontSize="Large"
              />
        </StackLayout>

            <StackLayout Orientation="Horizontal"  HorizontalOptions="Center">

        <Label Text="End:"
         Margin="15,5,-30,0"
               HeightRequest="44" WidthRequest="70" FontAttributes="Bold"
                TextColor="#FFFFFF"
                FontSize="Large"
        />
        <DatePicker x:Name="end"
            Margin="0,0"
            Format="dd, MMMM yyyy"
            MinimumDate="{Binding Source={x:Reference begin},
                                          Path=Date}"
            MaximumDate="{x:Static sys:DateTime.Now}"
            Date="{Binding SelectedDate}"
            VerticalOptions="Center"
            BackgroundColor="Transparent"
       
          
                HeightRequest="44" WidthRequest="180" FontAttributes="Bold"
                TextColor="#FFFFFF"
                FontSize="Large"
                />
                </StackLayout>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" >
                <Button Text="ME"
               CornerRadius="35"
               Margin="0,20,10,0"
               BackgroundColor="#5B0604"
               TextColor="#FFFFFF"
               HeightRequest="60" WidthRequest="120" FontAttributes="Bold"
                Clicked="onMeButtonClicked"
               FontSize="Title"
                />

                <Button Text="GLOBAL"
               Margin="0,20,10,0"
               BackgroundColor="#5B0604 "
               TextColor="#FFFFFF"
                CornerRadius="35"
               HeightRequest="60" WidthRequest="120" FontAttributes="Bold"
               Clicked="onGlobalButtonClicked"
               FontSize="Title"
                />
            </StackLayout>

            <Label
                x:Name="lun"
                IsVisible="false"
                Text="Lunch"
        Margin="35,35,10,0"
               HeightRequest="94" WidthRequest="70" FontAttributes="Bold"
                TextColor="#FFFFFF"
                FontSize="Large"
           />

            <forms:ChartView x:Name="chart1" HeightRequest="500" />

            <Label
                x:Name="din"
                IsVisible="false"
                Text="Dinner"
        Margin="35,35,0,0"
               HeightRequest="44" WidthRequest="70" FontAttributes="Bold"
                TextColor="#FFFFFF"
                FontSize="Large"
        />
             <forms:ChartView x:Name="chart4" HeightRequest="500" />

            <Label
                x:Name="glo"
                IsVisible="false"
                Text="Globally"
        Margin="50,30,0,0"
               HeightRequest="44" WidthRequest="70" FontAttributes="Bold"
                TextColor="#FFFFFF"
                FontSize="Large"
        />
            <forms:ChartView x:Name="chart3" HeightRequest="200"/>
           
             
        </StackLayout>
    </ScrollView>



</ContentPage>
